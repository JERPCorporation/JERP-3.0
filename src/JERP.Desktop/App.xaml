<Application x:Class="JERP.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:converters="clr-namespace:JERP.Desktop.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources RequestedTheme="Dark" />
                <ui:XamlControlsResources />
            </ResourceDictionary.MergedDictionaries>

 <SolidColorBrush x:Key="PrimaryBrush" Color="#1E88E5"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#43A047"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FFB300"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#E53935"/>
            
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:TemplateIconConverter x:Key="TemplateIconConverter"/>
            <converters:CannabisIndicatorConverter x:Key="CannabisIndicatorConverter"/>
            <converters:BreakdownHeightConverter x:Key="BreakdownHeightConverter"/>
            <converters:NullToBooleanConverter x:Key="NullToBooleanConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>


        
        
