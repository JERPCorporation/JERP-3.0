<UserControl x:Class="JERP.Desktop.Views.PayrollView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Payroll" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Pay Periods -->
            <Border Grid.Column="0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                    Padding="15" CornerRadius="8" Margin="0,0,15,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Pay Periods" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Year:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox SelectedItem="{Binding SelectedYear}" Width="100">
                            <ComboBox.Items>
                                <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">2024</sys:Int32>
                                <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">2023</sys:Int32>
                                <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">2022</sys:Int32>
                            </ComboBox.Items>
                        </ComboBox>
                    </StackPanel>

                    <ListBox Grid.Row="2" ItemsSource="{Binding PayPeriods}" 
                             SelectedItem="{Binding SelectedPayPeriod}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock FontWeight="SemiBold">
                                        <Run Text="{Binding StartDate, StringFormat=\{0:MM/dd\}}"/>
                                        <Run Text=" - "/>
                                        <Run Text="{Binding EndDate, StringFormat=\{0:MM/dd\}}"/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Status}" FontSize="11" Opacity="0.7"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Grid.Row="3" Content="Create Pay Period" Command="{Binding CreatePayPeriodCommand}" 
                            Height="35" Margin="0,15,0,0"/>
                </Grid>
            </Border>

            <!-- Right Panel - Pay Period Details -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Period Info -->
                <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        Padding="15" CornerRadius="8" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Selected Period" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal" Visibility="{Binding SelectedPayPeriod, Converter={StaticResource NullToVisibilityConverter}}">
                                <TextBlock Text="{Binding SelectedPayPeriod.StartDate, StringFormat=\{0:MM/dd/yyyy\}}"/>
                                <TextBlock Text=" - " Margin="5,0"/>
                                <TextBlock Text="{Binding SelectedPayPeriod.EndDate, StringFormat=\{0:MM/dd/yyyy\}}"/>
                                <TextBlock Text=" | Status: " Margin="10,0,5,0"/>
                                <TextBlock Text="{Binding SelectedPayPeriod.Status}" FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="Process Payroll" Command="{Binding ProcessPayrollCommand}" 
                                    Height="35" MinWidth="120" Margin="0,0,10,0"/>
                            <Button Content="Approve Payroll" Command="{Binding ApprovePayrollCommand}" 
                                    Height="35" MinWidth="120" Style="{StaticResource AccentButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Statistics -->
                <UniformGrid Grid.Row="1" Columns="2" Margin="0,0,0,15">
                    <Border Background="{DynamicResource SystemControlHighlightAccentBrush}" 
                            Padding="15" Margin="0,0,5,0" CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="Total Gross Pay" FontSize="14" Foreground="White" Opacity="0.9"/>
                            <TextBlock Text="{Binding TotalGrossPay, StringFormat=C}" FontSize="28" 
                                       FontWeight="Bold" Foreground="White" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SystemControlHighlightAccentBrush}" 
                            Padding="15" Margin="5,0,0,0" CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="Total Net Pay" FontSize="14" Foreground="White" Opacity="0.9"/>
                            <TextBlock Text="{Binding TotalNetPay, StringFormat=C}" FontSize="28" 
                                       FontWeight="Bold" Foreground="White" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Payroll Records -->
                <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        Padding="15" CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Payroll Records" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

                        <DataGrid Grid.Row="1" ItemsSource="{Binding PayrollRecords}" 
                                  AutoGenerateColumns="False" IsReadOnly="True"
                                  CanUserAddRows="False" CanUserDeleteRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="200"/>
                                <DataGridTextColumn Header="Regular Hours" Binding="{Binding RegularHours, StringFormat=F2}" Width="120"/>
                                <DataGridTextColumn Header="OT Hours" Binding="{Binding OvertimeHours, StringFormat=F2}" Width="100"/>
                                <DataGridTextColumn Header="Gross Pay" Binding="{Binding GrossPay, StringFormat=C}" Width="120"/>
                                <DataGridTextColumn Header="Taxes" Binding="{Binding TotalTaxes, StringFormat=C}" Width="100"/>
                                <DataGridTextColumn Header="Deductions" Binding="{Binding TotalDeductions, StringFormat=C}" Width="120"/>
                                <DataGridTextColumn Header="Net Pay" Binding="{Binding NetPay, StringFormat=C}" Width="120"/>
                                <DataGridTemplateColumn Header="Actions" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="View Pay Stub" Command="{Binding DataContext.ViewPayStubCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                    CommandParameter="{Binding}" Padding="10,5"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Button Grid.Row="2" Content="Download All Pay Stubs (ZIP)" 
                                Command="{Binding DownloadAllPayStubsCommand}" 
                                Height="35" HorizontalAlignment="Right" MinWidth="200" Margin="0,15,0,0"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
